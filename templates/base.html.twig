<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>
			{% block title %}Product Checkout
			{% endblock %}
		</title>
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body style="padding-top:70px;">
		<nav class="navbar navbar-expand-sm fixed-top navbar-light bg-light" style="opacity:0.5">
			<div class='container'>
				<a class="navbar-brand mr-auto" href="#">
					<img src="{{ asset('images/logo.png') }}" width="30" height="30" class="d-inline-block align-top" alt="">
					Flying Scissors Salon
				</a>
				<div class="collapse navbar-collapse" id="navbarText">
					<ul class="navbar-nav me-auto mb-2 mb-lg-0">
						<li class="nav-item">
							<a class="nav-link" aria-current="page" href="{{ path('productCatalog') }}">Catalog</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#">Orders Dashboard</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('adminDashboard') }}">Admin</a>
						</li>
					</ul>
					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="nav-link p-2 me-2">
								<i class="fa-solid fa-cart-shopping"></i>
							</a>
						</li>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle p-2" href="#" data-turbo="false" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								<i class="fa-solid fa-user"></i>
							</a>
							<ul class="dropdown-menu">
								{% if app.user is not null %}
									<li>
										<p class="dropdown-item">Welcome
											{{ app.user.name|split(' ')|first }}</p>
									</li>
									<li>
										<a class="dropdown-item" href="{{ path('app_logout') }}">Logout</a>
									</li>
								{% else %}
									<li>
										<a class="dropdown-item" href="{{ path('app_login') }}">Login</a>
									</li>
								{% endif %}
							</ul>
						</li>
					</ul>
				</div>
			</div>
		</nav>
		<div class='container'> {% block body %}{% endblock %}
			</div>
		</body>
	</html>
